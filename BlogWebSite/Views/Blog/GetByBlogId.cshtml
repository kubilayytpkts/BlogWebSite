@using BlogWebSite_Entity
@using BlogWebSite.Controllers
@model List<BlogModel>

@{
	var blogId = ViewBag.blogId;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
	<meta name="description" content="">
	<meta name="author" content="">
	<link rel="icon" href="favicon.ico">
	<title>Renda - clean blog theme based on Bootstrap</title>
	<!-- Bootstrap core CSS -->
	<link href="/author/post/css/bootstrap.min.css" rel="stylesheet">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
	<!-- Custom styles for this template -->
	<link href="/author/post/css/jquery.bxslider.css" rel="stylesheet">
	<link href="/author/post/css/style.css" rel="stylesheet">
</head>
<body>
	<!-- Navigation -->
	<nav class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
			</div>
			<div id="navbar" class="collapse navbar-collapse">
				<ul class="nav navbar-nav">
				</ul>

				<ul class="nav navbar-nav navbar-right">
				</ul>

			</div>
			<!--/.nav-collapse -->
		</div>
	</nav>

	<div class="container">
		<header>
			@* <a href="index.html"><img src="/author/post/images/logo_ercan.jpg"></a> *@
		</header>
		<section>
			<div class="row">
				<div class="col-md-8">
					@foreach(var item in Model)
					{
					<article class="blog-post">
						<div class="blog-post-image">
							<a href="post.html"><img src="@item.BlogImage" alt=""></a>
						</div>
						<div class="blog-post-body">
							<h2><a href="post.html"></a>@item.BlogTitle</h2>
								<div class="post-meta"><span><a>Şeyma Ercan</a></span>/<span><i class="fa fa-clock-o"></i>@item.BlogDateTime.Value.ToString("dd.MM.yyyy")</span>/<span><a>@item.Category.CategoryName</a></span></div>
							<div class="blog-post-text">

								<p>@item.BlogDescription</p>
							</div>
						</div>
					</article>
					}
				</div>
				<div class="col-md-4 sidebar-gutter">
					<aside>
						<!-- sidebar-widget -->
						@* @await Component.InvokeAsync("AboutComponentBlog") *@
						<!-- sidebar-widget -->
						@await Component.InvokeAsync("GetLastBlog")
						<!-- sidebar-widget -->
						@await Component.InvokeAsync("SocialMediaComponentOfBlog")
						<!-- sidebar-widget -->
						@await Component.InvokeAsync("CategoryComponent")
				</div>
				 @await Component.InvokeAsync("CommentListByBlog",new {id=(int)blogId})
				</aside>
			</div>
			@await Html.PartialAsync("~/Views/Comment/AddComment.cshtml")
	</div>
	</section>

	</div><!-- /.container -->

	<!-- Bootstrap core JavaScript
		================================================== -->
	<!-- Placed at the end of the document so the pages load faster -->
	<script src="author/post/https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
	<script src="author/post/js/bootstrap.min.js"></script>
	<script src="author/post/js/jquery.bxslider.js"></script>
	<script src="author/post/js/mooz.scripts.min.js"></script>
</body>
</html>

