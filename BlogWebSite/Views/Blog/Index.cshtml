@using BlogWebSite_Entity
@model BlogWebSite_Entity.BlogModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Home_Layout.cshtml";
}

<style>
	a {
		color: inherit; /* Bağlantı rengini etkilemez, etiketin içindeki rengi kullanır */
		text-decoration: none; /* Mavi çizgiyi kaldırır */
	}
</style>

<section class="fh5co-blog">
	<div class="site-container">
		<h2 class="universal-h2 universal-h2-bckg">Bloglarım</h2>
		<div class="blog-slider blog-inner">
			@foreach (var item in ViewBag.blogValue)
			{
			<div class="single-blog">
				<div class="single-blog__img">
					<img src="@item.BlogImage" alt="blog image" style="max-width: 100%; height: auto;">
				</div>
				<div class="single-blog__text">
						<a href="/Blog/GetByBlogId/@item.BlogID">
							<h4>@item.BlogTitle</h4>
						</a>
					<span>@item.BlogDateTime.ToString("dd.MM.yyyy")</span>
					<p>@item.BlogDescription</p>
				</div>
			</div>
			}
		</div>
	</div>
</section>
