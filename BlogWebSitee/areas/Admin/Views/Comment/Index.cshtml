@using BlogWebSite_Entity
@using X.PagedList
@using X.PagedList.Mvc.Core
@model List<CommentModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/areas/Admin/Views/Shared/Admin_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<link rel="stylesheet" href="~/css/demo.css" />
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="container">
    <h2>Alıntılar </h2>
    <ul class="responsive-table">
        <li class="table-header" style="background-color:blue">
            <div class="col col-1" style="text-align:center; color:white; margin-left:;">ID</div>
            <div class="col col-2" style="text-align:center; color:white; margin-left:;">Yorum</div>
            <div class="col col-4" style="text-align:center; color:white; margin-left:;">Aktiflik</div>
            <div class="col col-4" style="text-align:center; color:white; margin-left:;">İncele / SİL</div>
        </li>
        @foreach (var item in Model)
        {
            <li class="table-row">
                <div class="col col-1" style="text-align:center;" data-label="CategoryID">@item.CommentID</div>
                <div class="col col-2" style="text-align:center; margin-left:-4em;" data-label="CategoryName">@item.NameSurname</div>
                @if (item.Status == true)
                {
                    <form method="post" onsubmit="return confirmAction(@item.CommentID, 'deActive')">
                        <button type="submit" class="btn btn-danger">Pasif Yap</button>
                    </form>
                }
                else
                {
                    <form method="post" onsubmit="return confirmAction(@item.CommentID, 'Active')">
                        <button type="submit" class="btn btn-success">Aktif Yap</button>
                    </form>
                }

                <button type="submit" class="btn btn-primary" onclick="reviewComment(@item.CommentID)">İncele</button>

                <form method="post" onsubmit="deleteComment(@item.CommentID); return false;">
                    <button type="submit" class="btn btn-warning">Sil</button>
                </form>
            </li>
        }
    </ul>
</div>
<script>
    function deleteComment(id) {

        Swal.fire({
            title: "Emin misiniz ?",
            icon: "warning",
            text: "Yapmış olduğunuz işlem Sistemi etkileyebilir.",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Evet, sil!",
            cancelButtonText: "Hayır"
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: "/Admin/Comment/DeleteComment",
                    method: "DELETE",
                    data: { id: id },
                    success: function (response) {
                        if (response.success) {
                            Swal.fire({
                                icon: "success",
                                text: "Değişiklikler için sayfayı yenileniyor !",
                                title: "İşlem başarılı",
                            }).then(() => {
                                window.location.reload();
                            })
                        }
                        else {
                            Swal.fire({
                                icon: "error",
                                text: "Bir hata oluştu,Lütfen tekrar deneyin.",
                                title: "İşlem başarısız",
                            });
                        }
                    },
                    error: function () {
                        Swal.fire({
                            icon: "error",
                            title: "İşlem başarısız",
                            text: "Bir hata oluştu, lütfen tekrar deneyin."
                        });
                    }
                });
            }
        });
    }

    function confirmAction(id, type) {
        Swal.fire({
            title: "Emin misiniz?",
            text: "Yapmış olduğunuz işlem Sistemi etkileyebilir.",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: "/Admin/Comment/ChangeCommentStatus",
                    method: "POST",
                    data: { id: id, type: type },
                    success: function (response) {
                        if (response.success) {
                            Swal.fire({
                                title: "İşlem başarılı",
                                text: "Değişiklikler için sayfa yenileniyor...",
                                icon: "success",
                            }).then(() => {
                                window.location.reload();
                            });
                        } else {
                            Swal.fire({
                                title: "İşlem başarısız",
                                text: "Lütfen tekrar deneyin.",
                                icon: "error",
                            });
                        }
                    },
                    error: function () {
                        Swal.fire({
                            title: "Hata",
                            text: "Bir hata oluştu. Lütfen daha sonra tekrar deneyin.",
                            icon: "error",
                        });
                    }
                });
            }
        });

        return false;
    }

    function reviewComment(id){
        window.location.href = "/Admin/Comment/ReviewComment?id=" + id;
    }

</script>
