@using BlogWebSite_Entity
@model CommentModel
@{
    ViewData["Title"] = "ReviewComment";
    Layout = "~/areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<link href="https://fonts.googleapis.com/css?family=Lora|Merriweather:300,400" rel="stylesheet">

<link href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<form id="updateForm" method="post" onsubmit="updateQuates(event)" style="margin-left:50px">
    <div class="columns is-multiline">
        <div class="column is-half">
            <div class="box">
                <div class="field">
                    <label class="label">Yorum ID</label>
                    <div class="control">
                        <input class="input" type="text" name="QuotesID" value="@Model.CommentID" readonly>
                    </div>
                </div> 
                <div class="field">
                    <label class="label">Blog</label>
                    <div class="control">
                        <input class="input" type="text" name="QuotesID" value="@ViewData["blogName"]" readonly>
                    </div>
                </div>
                <div class="field">
                    <label class="label">Yorum Durumu</label>
                    <div class="control">
                        @if(Model.Status is true)
                        {
                            <input class="input" type="text" name="QuotesID" style="color:green;" value="aktif" readonly>
                        }
                        else
                        {
                            <input class="input" type="text" name="QuotesID" style="color:red;" value="pasif" readonly>
                        }
                    </div>
                </div>
                
                <div class="field">
                    <label class="label">Kullanıcı</label>
                    <div class="control">
                        <input class="input" type="text" name="QuotesWriterName" value="@Model.NameSurname" readonly>
                    </div>
                </div>
                <div class="field">
                    <label class="label">Yorum</label>
                    <div class="control">
                        <textarea class="textarea" rows="10" name="QuotesDescription" value="@Model.Description" readonly>@Model.Description</textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>
</form>

