@using BlogWebSite_Entity
@model QuotesModel

@{
    ViewData["Title"] = "EditQuates";
    Layout = "~/areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<form id="updateForm" method="post" onsubmit="updateQuates(event)" style="margin-left:50px">
    <div class="columns is-multiline">
        <div class="column is-half">
            <div class="box">
                <div class="field">
                    <label class="label">Soru ID</label>
                    <div class="control">
                        <input class="input" type="text" name="QuotesID" value="@Model.QuotesID" readonly>
                    </div>
                </div>
                <div class="field">
                    <label class="label">Soru</label>
                    <div class="control">
                        <input class="input" type="text" name="QuotesWriterName" value="@Model.QuotesWriterName">
                    </div>
                </div>
                <div class="field">
                    <label class="label">Soru Cevabı</label>
                    <div class="control">
                        <textarea class="textarea" rows="10" name="QuotesDescription" value="@Model.QuotesDescription" >@Model.QuotesDescription</textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>
    <button type="submit" class="button is-primary" id="save-button">Güncelle</button>
</form>


<script>
    function updateQuates(event) {
        event.preventDefault(); // Form gönderimini engelle

        var formData = new FormData($("#updateForm")[0]);

        $.ajax({
            url: "/Admin/Quates/EditQuates",
            type: "POST",
            data: formData,
            contentType: false,
            processData: false,

            success: function (response) {
                if (response.success) {
                    swal.fire({
                        title: "İşlem Başarılı !",
                        text:"Yönlendiriliyorsunuz...",
                        icon: "success",
                        button: "Tamam",
                    }).then(() => {
                        window.location.href="Index";
                    });
                }
                else {
                    swal.fire({
                        title: "İşlem başarısız !",
                        icon: "error",
                        button: "Tamam",
                    })
                }
            },
            error: function () {
                alert("İşlem başarısız oldu");
            }
        });

    }

    function showFileName(input) {
        var fileName = 'resim seçildi';
        var fileLabel = $(input).closest('.file').find('.file-label .file-label')[0];
        fileLabel.textContent = fileName;
    }
</script>