@using BlogWebSite_Entity
@model List<BlogModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css" rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<html lang="tr">
<head>
	<title>Bloglar</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,700' rel='stylesheet' type='text/css'>

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<link rel="stylesheet" href="~/admin/css/style.css">

</head>
<body>
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-4">
					<h2 class="heading-section">Table #06</h2>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<h3 class="h5 mb-4 text-center">Table Accordion</h3>
					<div class="table-wrap">
						<table class="table">
							<thead class="thead-primary">
								<tr>
									<th>&nbsp;</th>
									<th>&nbsp;</th>
									<th>İsim</th>
									<th>Tarih</th>
									<th>Durum</th>
									<th>Düzenle</th>
									<th>&nbsp;</th>
								</tr>
							</thead>
							<tbody>
								@foreach(var item in Model)
								{
									<tr class="alert" role="alert">
										<td>
											<label class="checkbox-wrap checkbox-primary">
												<input type="checkbox" checked>
												<span class="checkmark"></span>
											</label>
										</td>
										<td>
											<div class="img" style="background-image: url(@item.BlogThumbnailImage);"></div>
										</td>
										<td>
											<div class="email">
												<span>@item.BlogTitle</span>
												<span>@item.BlogDescription.Substring(0,80)...</span>
											</div>
										</td>
										<td>@item.BlogDateTime</td>
										<td class="quantity">
											<div class="input-group">
												@if(item.Status is true)
												{
													<button type="submit" class="btn btn-danger">Pasif Yap</button>
												}
												else
												{
													<button type="submit" class="btn btn-success">Aktif Yap</button>
												}
											</div>
										</td>
										<td>
											<button type="submit" class="btn btn-primary">İncele</button>
										</td>
										<td>
											<button type="button" class="close" data-dismiss="alert" aria-label="Close">
												<span aria-hidden="true"><i class="fa fa-close"></i></span>
											</button>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="~/admin/js/jquery.min.js"></script>
	<script src="~/admin/js/popper.js"></script>
	<script src="~/admin/js/bootstrap.min.js"></script>
	<script src="~/admin/js/maintable.js"></script>

</body>
</html>
<script>
	Swal.fire({
		title: "Emin misiniz ?",
		icon: "warning",
		text: "Yapmış olduğunuz işlem Sistemi etkileyebilir.",
		showCancelButton: true,
		confirmButtonColor: "#3085d6",
		cancelButtonColor: "#d33",
		confirmButtonText: "Evet, sil!",
		cancelButtonText: "Hayır"
	});
	// Bu kısımda kalınıldı 
</script>	