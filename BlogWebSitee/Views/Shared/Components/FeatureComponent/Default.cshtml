
<h4 class="universal-h2 universal-h2-bckg">@ViewBag.featureTitle</h4>
<br />
<br>
<div class="fh5co-counter counters">
	@foreach (var item in @ViewBag.featureValue)
	{
		<div class="counter-inner site-container">
			<div class="single-count">
				<span class="count" data-count="@item.ReadBook">0</span>
				<div class="single-count__text">
					<img src="~/author/images/counter-1.png" alt="counter icon">
					<p>Kitap</p>
				</div>
			</div>
			<div class="single-count">
				<span class="count" data-count="@item.ReadArticlePage">0</span>
				<div class="single-count__text">
					<img src="~/author/images/counter-2.png" alt="counter icon">
					<p>Sayfa Makale</p>
				</div>
			</div>
			<div class="single-count">
				<span class="count" data-count="@item.AdditionalLanguage">0</span>
				<div class="single-count__text">
					<img src="~/author/images/counter-3.png" alt="counter icon">
					<p>Ek dil</p>
				</div>
			</div>
			<div class="single-count">
				<span class="count" data-count="@item.Activity">0</span>
				<div class="single-count__text">
					<img src="~/author/images/counter-4.png" alt="counter icon">
					<p>Etkinlik</p>
				</div>
			</div>
		</div>
	}
</div>
